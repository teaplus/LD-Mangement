QMainWindow {
    background-color: #f0f0f0;
}

QPushButton {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 5px 15px;
    border-radius: 3px;
}

QPushButton:hover {
    background-color: #1976D2;
}

QPushButton:pressed {
    background-color: #0D47A1;
}

QTableWidget {
    background-color: white;
    border: 1px solid #ddd;
}

QTableWidget::item {
    padding: 5px;
}

QTableWidget::item:selected {
    background-color: #2196F3;
    color: white;
}